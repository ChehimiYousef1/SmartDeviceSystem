<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartHomeAutomationSystemSimulator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartHomeAutomationSystemSimulator.styles.css" asp-append-version="true" />
    <!-- Add this CSS to your _Layout.cshtml in the <head> section or in a separate CSS file -->
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom shadow-sm" style="background: linear-gradient(90deg, #0d6efd, #198754);">
            <div class="container">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-page="/Index">
                    SmartHome Automation
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" href="/swagger">Swagger API</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <style>
        /* Navbar brand hover effect */
        .navbar-brand:hover {
            text-decoration: underline;
            color: #ffc107 !important; /* Highlight color on hover */
        }

        /* Navbar link hover effect */
        .navbar-nav .nav-link:hover {
            color: #ffc107 !important; /* Highlight color on hover */
            text-decoration: underline;
        }

        /* Navbar shadow and padding tweaks */
        .navbar {
            padding: 0.75rem 1rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        /* Mobile toggler color */
        .navbar-toggler {
            border-color: rgba(255, 255, 255, 0.7);
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba%28255, 255, 255, 0.9%29' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/ %3E%3C/svg%3E");
        }
    </style>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light border-top py-4 mt-auto">
        <div class="container text-center text-muted">
            <p class="mb-2">&copy; 2025 Smart Home Automation System Simulator</p>
            <p class="mb-1">Developed by <span class="fw-bold text-primary">Youssef El Chehimi</span></p>
            <small class="d-block">Tasks Internship for <span class="fw-bold text-success">Codveda Technologies</span> and <span class="fw-bold text-success">CodeAlpha</span></small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>